@model WebDBApp.ViewModels.RegisterAccountViewModel


<div class="row">
    <div class="col-md-5" style="float: none; margin: 0 auto;">
        <div id="errorPlaceHolder"></div>
    </div>
    <div class="col-md-5" style="float: none; margin: 0 auto;">          
        <h2>TWORZENIE NOWEGO KONTA</h2>
        <form class="form-horizontal" action="/Login/Register" method="post">
            <div class="form-group">
                <label for="FirstName" class="col-sm-3 control-label">LOGIN</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Login, new { @class = "form-control"})
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="col-sm-3 control-label">E-MAIL</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="col-sm-3" id="EmailError">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                <label for="FirstName" class="col-sm-3 control-label">IMIĘ</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label for="LastName" class="col-sm-3 control-label">NAZWISKO</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
            </div>
            <div class="form-group">
                <label for="Sex" class="col-sm-3 control-label">PŁEĆ</label>
                <div class="col-sm-6">
                    @Html.EditorFor(x => x.Sex, new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.Sex)
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-sm-3 control-label">HASŁO</label>
                <div class="col-sm-6">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>            
            
            <div id="bottomMenu" class="col-md-offset-3 col-md-6">
                <input type="button" class="btn btn-success" value="WYŚLIJ" onclick="registerUser()"/>
                <input type="button" class="btn btn-warning" value="ANULUJ" onclick="showLoginView()" />
            </div>
        </form>
    </div>
</div>

