@model WebDBApp.ViewModels.EditAccessoriesViewModel
@{
    ViewBag.Title = "Edit Accessories";
}

<div class="row">
    <div class="col-md-5" style="float: none; margin: 0 auto;">
        <div id="errorPlaceHolder"></div>
    </div>
    <div class="col-md-5" style="float: none; margin: 0 auto;">
        <h2>EDIT ACCESSORIES</h2>
        <form class="form-horizontal" action="/Accessory/EditAccessory" method="post">
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                <label for="SelectedAccesory" class="col-sm-3 control-label">ACCESSORY</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(model => model.SelectedAccesory , new SelectList(Model.choices, "Value", "Text"), "Choose... ", new { @class="form-control dropdown" })
                </div>
            </div>
            <div class="form-group">
                <label for="NewName" class="col-sm-3 control-label">NEW NAME</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(x => x.NewName, new { @class = "form-control"})
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.NewName)
                </div>
            </div>            
            <div class="form-group">
                <label for="Description" class="col-sm-3 control-label">NEW DESCRIPTION</label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    @Html.ValidationMessageFor(x => x.Description)
                </div>
            </div>

            <div id="bottomMenu" class="col-md-offset-3 col-md-6">
                <input type="submit" class="btn btn-success" value="WYŚLIJ" />
                <input type="button" class="btn btn-warning" value="ANULUJ" onclick="window.location = '/Hall';" />     
                <input type="button" class="btn btn-danger" value="Delete" onclick="deleteAccessory()"/>           
            </div>
        </form>
        
    </div>
</div>
